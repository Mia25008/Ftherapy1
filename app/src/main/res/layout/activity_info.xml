<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDEBE9"
    tools:context=".screens.InfoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#E2C5BF"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="שיטות טיפול בקליניקה"
            app:titleTextColor="#9A000000">

            <ImageView
                android:id="@+id/toolbar_logo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:contentDescription="Logo"
                app:srcCompat="@drawable/logo" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#f1d4ce"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_semibold"
                        android:text="רייקי"
                        android:textColor="#8E736E"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/rubik"
                        android:lineSpacingExtra="5sp"
                        android:text="רייקי היא שיטת טיפול אנרגטית שמטרתה לאזן את הגוף והנפש באמצעות העברת אנרגיה עדינה, לרוב דרך הנחת ידיים. כאשר משלבים רייקי עם סאונד הילינג, נעשה שימוש בצלילים ותדרים כמו קערות טיבטיות, פעמונים או מוזיקה מרגיעה, המסייעים לה להעמיק את תחושת הרוגע והאיזון. השילוב בין אנרגיה וצליל נועד לעודד אצלה שחרור מתחים, חיבור פנימי והרמוניה כללית."
                        android:textColor="#444444"
                        android:textSize="15sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#f1d4ce"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_semibold"
                        android:text="שמנים אתריים"
                        android:textColor="#8E736E"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/rubik"
                        android:lineSpacingExtra="5sp"
                        android:text="שמנים אתריים הם תמציות טבעיות המופקות מצמחים, פרחים ועצים, ומשמשים בתחום הארומתרפיה. לכל שמן מיוחס ריח והשפעה ייחודיים, כמו הרגעה, רענון או חיזוק תחושת איזון. השימוש נעשה לרוב באמצעות הרחה, עיסוי מדולל או פיזור באוויר, והמטרה היא לתמוך ברווחתה הרגשית והנפשית בצורה טבעית ועדינה."
                        android:textColor="#444444"
                        android:textSize="15sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#f1d4ce"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_semibold"
                        android:text="אימון הוליסטי"
                        android:textColor="#8E736E"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/rubik"
                        android:lineSpacingExtra="5sp"
                        android:text="אימון הוליסטי הוא גישה המסתכלת על האדם כמכלול של גוף, נפש, רגש ותודעה. האימון משלב שיחות, הצבת מטרות, כלים להקשבה פנימית ופיתוח מודעות עצמית. מטרתו היא לעזור לה להבין את עצמה טוב יותר, לחזק תחושת מסוגלות וליצור שינוי חיובי באורח החיים מתוך חיבור לערכים ולצרכים האישיים שלה."
                        android:textColor="#444444"
                        android:textSize="15sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="#f1d4ce"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_semibold"
                        android:gravity="right"
                        android:text="EMR"
                        android:textColor="#8E736E"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/rubik"
                        android:gravity="right"
                        android:lineSpacingExtra="5sp"
                        android:text="EMR היא שיטה רגשית־אנרגטית המתמקדת בזיהוי ושחרור של זיכרונות או רגשות מעכבים שנשמרו בגוף ובתודעה. באמצעות שיחה, תשומת לב לתחושות פנימיות וטכניקות מיקוד, היא לומדת לעבד חוויות מהעבר בצורה בטוחה ומודעת. מטרת השיטה היא לאפשר לה הקלה רגשית, חיזוק תחושת שקט פנימי ויצירת מקום לתחושות חיוביות יותר."
                        android:textColor="#444444"
                        android:textSize="15sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>